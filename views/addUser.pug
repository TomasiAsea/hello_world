doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel="stylesheet" href="/css/adduser.css")
form(action="register" method='POST')
  fieldset
    legend
      | User personal information
    label  first name
    input#firstName(type='text' name='firstName')
    label last name
    input#lastName(type='text' name='lastName')
    label(for='childName') ChildName:
    input#childName.form-control(type='text' name='childName' placeholder='childName' required='')
    label(for='childAge') ChildAge:
    input#childAge.form-control(type='int' name='childAge' placeholder='childAge' required='')
    label Enter your gender
    input(type='radio' name='gender' value='male')
    | Male
    input#gender(type='radio' name='gender' value='female')
    | Female
    input#gender(type='radio' name='gender' value='others')
    | Others
    label ID:
    input#id.form-control(type='text' name='id' placeholder='id' required='')
    label(for='telNo') TelNo:
    input#telNo.form-control(type='int' name='telNo' placeholder='telNo' required='')
    label Enter your Address:
    textarea#address(name='address')
    label Enter your email
    input#email(type='email' name='email')
    label(for='country') Country:
    input#country.form-control(type='text' name='country' placeholder='country' required='')
    label(for='role') Role:
    select#role.form-control(name='role' placeholder='role')
      option(value='admin') Admin
      option(value='sitter') Sitter
      option(value='parent') Parent
    label Enter your Date of Birth
    input#dob(type='date' name='dob')
    label(for='userName') UserName:
    input#userName.form-control(type='text' name='userName' placeholder='userName' required='')
    label Enter your password
    input#password(type='password' name='pass')
    label Confirm your password
    input#password(type='password' name='confirmPass')
    // <input type="submit"   value="submit"/>
    button(type='submit') Register
