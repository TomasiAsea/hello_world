doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Daystar admindash
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet' href='/style.css')
  // font awesome cdn link
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
.container
  section#header-Sec.section
    header.header
      a.logo(href='#')
        img(src='./data/images/DAYSTARLOGO.png' alt='Card image')
      nav#nav-bar.navbar
        a(href='#home') School Activities
        a(href='#about') About Us
        a(href='#contact') Contact Us
      .icons
        #logout-btn.fas.fa-user
          a(href='/index.html') Logout
        #menu-btn.fas.fa-bars
  section#home.dashboard
    h2 Add New User
    form#addUserForm.adduserForm
      label(for='firstName') First Name:
      input#firstName(type='text' required='')
      br
      br
      label(for='lastName') Last Name:
      input#lastName(type='text' required='')
      br
      br
      label(for='childName') ChildName:
      input#childName(type='text' name='childName' required='')
      br
      br
      label(for='childAge') ChildAge:
      input#childAge(type='text' name='childAge')
      br
      br
      label(for='childGender') ChildGender:
      select#childGender.form-control(name='childGender' placeholder='choose')
        option(value='male') Male
        option(value='female') Female
      br
      label(for='id') Id:
      br
      input#id(type='text' name='id' required='')
      br
      br
      label(for='telNo') TelNo:
      br
      input#telNo(type='text' name='telNo' required='')
      br
      br
      label(for='email') Email:
      br
      input#email(type='email' name='email' autocomplete='on' required='')
      br
      br
      label(for='address') Address:
      br
      input#address(type='text' name='address' autocomplete='on' required='')
      br
      br
      label(for='country') Country:
      br
      input#country(type='text' name='country' autocomplete='on' required='')
      br
      br
      label(for='role') Role:
      br
      select#role.form-control(type='text' name='role' placeholder='role')
        option(value='admin') Admin
        option(value='sitter') Sitter
        option(value='parent') Parent
      br
      label(for='userName') UserName:
      br
      input#userName(type='userName' name='userName' autocomplete='on' required='')
      br
      label(for='password') Password:
      br
      input#password(type='password' name='password' required='')
      br
      br
      button(type='submit') Add User
  #formContainer.container
    h2 User List
    table#userTable.userTable
      thead
        tr
          th First Name
          th Last Name
          th Child Name
          th Child Age
          th Child Gender
          th Id
          th Tel No
          th Email
          th Address
          th Country
          th Role
          th User Name
          th Password
      tbody#userTableBody
        // User data will be dynamically inserted here
script(src='/js/admindash.js')
